<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SiriusRatingBar" parent="Theme.AppCompat">
        style="?android:attr/ratingBarStyleSmall"
        <item name="colorControlNormal">@color/rating_starts</item>
        <item name="colorControlActivated">@color/rating_starts</item>
        <item name="android:isIndicator">true</item>
        <item name="android:max">5</item>
        <item name="android:numStars">5</item>
        <item name="android:rating">5</item>
        <item name="android:scaleX">.4</item>
        <item name="android:scaleY">.4</item>
        <item name="android:theme">@style/SiriusRatingBar</item>
        <item name="android:transformPivotX">0dp</item>
    </style>

    <style name="TextViewP3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/text_p3</item>
        <item name="android:fontFamily">@font/sk_modernist_regular</item>
    </style>

    <style name="TextViewP2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/text_p2</item>
        <item name="android:fontFamily">@font/sk_modernist_regular</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:translationY">-2.3sp</item>
    </style>

    <style name="TextViewP1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/sk_modernist_bold</item>
        <item name="android:textColor">@color/text_p1</item>
    </style>

    <style name="CircleTag">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:backgroundTint">@drawable/oval</item>
    </style>

    <style name="ButtonTag">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>

        <item name="android:background">@drawable/buttonshape</item>
        <item name="android:fontFamily">@font/montserrat_subrayada</item>
        <item name="android:textColor">#44A9F4</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="InstallButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:paddingLeft">67dp</item>

        <item name="android:background">@drawable/install_button</item>
        <item name="android:fontFamily">@font/montserrat_subrayada</item>

        <item name="android:textSize">12sp</item>
    </style>

    <style name="BaseFrame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">top</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingRight">20sp</item>
    </style>


</resources>